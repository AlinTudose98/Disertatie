<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<VBox fx:controller="com.alint.disertatie.javaeutlclient.controller.HomeView" prefHeight="600.0"
      prefWidth="900.0" styleClass="backgroundContainer" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="logoImageView">
                    <Image requestedHeight="60" preserveRatio="true" url="@../img/logo-ec-cut.png"/>
                </ImageView>
                <Label alignment="CENTER_LEFT" text="Java European Trusted List Parser">
                    <font>
                        <Font size="11.0" fx:id="x5"/>
                    </font>
                    <textFill>
                        <Color red="1" green="1" blue="1" fx:id="x6"/>
                    </textFill>
                </Label>
            </children>
            <padding>
                <Insets bottom="3.0" left="5.0" right="3.0" top="5.0"/>
            </padding>
        </HBox>
        <SplitPane dividerPositions="0.1" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0"
                   VBox.vgrow="ALWAYS">
            <items>
                <VBox maxHeight="Infinity" VBox.vgrow="ALWAYS">
                    <children>
                        <AnchorPane styleClass="lightGrayBackground">
                            <children>
                                <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" minWidth="60.0" prefWidth="-1.0"
                                       style="&#10;" text="Menu" textAlignment="CENTER" wrapText="false">
                                    <font>
                                        <Font size="18.0" fx:id="x1"/>
                                    </font>
                                    <textFill>
                                        <Color red="0.1" green="0.1" blue="0.1" fx:id="x2"/>
                                    </textFill>
                                </Label>
                            </children>
                        </AnchorPane>
                        <VBox maxHeight="Infinity" VBox.vgrow="ALWAYS" styleClass="lightGrayBackground" spacing="5"
                              alignment="TOP_LEFT">
                            <children>
                                <Button maxWidth="Infinity" onAction="#goToEuTLBrowser" text="TL Browser"/>
                                <Button maxWidth="Infinity" onAction="#goToValidateSignature"
                                        text="Validate Signature"/>
                                <Button maxWidth="Infinity" onAction="#goToValidateCertificate"
                                        text="Validate Certificate"/>
                            </children>
                            <padding>
                                <Insets topRightBottomLeft="10"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
                <VBox SplitPane.resizableWithParent="true">
                    <AnchorPane fx:id="content" id="Content" minHeight="-1.0" minWidth="-1.0"
                                 VBox.vgrow="ALWAYS"/>
                </VBox>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <HBox fx:id="historyTree">
                    <children>
                        <Hyperlink onAction="#returnToMainMenu" fx:id="currWindowView"
                                   maxHeight="1.7976931348623157E308" maxWidth="-1.0"
                                   HBox.hgrow="ALWAYS">
                            <effect>
                                <DropShadow color="white" radius="2"/>
                            </effect>
                            <font>
                                <Font size="13.0" fx:id="x3"/>
                            </font>
                            <textFill>
                                <Color red="0" green="0" blue="0" fx:id="x4"/>
                            </textFill>
                        </Hyperlink>
                    </children>
                </HBox>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lowerRightStatusLabel" font="$x3" maxWidth="-1.0" text=" Tudose Alin-Romeo 2023"
                       textFill="$x4" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
